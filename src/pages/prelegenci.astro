    <style>
      :root {
        --bg-dark: #18181a;
        --bg-mid: #1a1a1f;
        --bg-deep: #1c1c24;
        --text-light: #efdee8;
        --text-mid: #dddddd;
        --text-dim: #919598;
        --accent-violet: #6e27e1;
        --accent-pink: #f287c8;
        --accent-cyan: #40d0d5;
        --accent-grad-start: #0900d6;
        --accent-grad-end: #ff8cd1;
        --font-title: 'Orbitron', sans-serif;
        --font-body: 'Poppins', sans-serif;
        --font-mono: 'Roboto Mono', monospace;
      }

      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      html, body {
        height: 100%;
      }

      body {
        background: linear-gradient(180deg, 
          var(--bg-dark) 0%, 
          var(--bg-mid) 30%,
          var(--bg-deep) 60%,
          var(--bg-dark) 100%
        );
        background-attachment: fixed;
        color: var(--text-light);
        font-family: var(--font-body);
        min-height: 100vh;
        padding: 2rem;
        padding-top: 4rem;
      }

      .container {
        max-width: 850px;
        margin: 0 auto;
      }

      header {
        text-align: center;
        margin-bottom: 3rem;
      }

      .header-row {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 0.5rem;
      }

      .nav-link {
        color: var(--text-dim);
        text-decoration: none;
        font-size: 1.1rem;
        font-weight: 400;
        letter-spacing: 0.05em;
        transition: color 0.3s ease;
        padding: 0.5rem 0;
        min-width: 150px;
      }

      .nav-left {
        text-align: left;
      }

      .nav-right {
        text-align: right;
      }

      .nav-link:hover {
        color: var(--accent-pink);
      }

      h1 {
        font-family: var(--font-title);
        font-size: clamp(2rem, 6vw, 3.5rem);
        font-weight: 400;
        letter-spacing: 0;
        line-height: 1.5;
        text-transform: uppercase;
        background: linear-gradient(135deg, var(--text-light) 0%, var(--accent-pink) 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        margin: 0;
      }

      .subtitle {
        color: var(--text-dim);
        letter-spacing: 0.1em;
        margin-top: 0.5rem;
        font-weight: 300;
      }

      .speakers-list {
        display: flex;
        flex-direction: column;
        gap: 2rem;
      }

      .speaker-card {
        display: flex;
        gap: 1.5rem;
        background: rgba(110, 39, 225, 0.05);
        border: 1px solid rgba(110, 39, 225, 0.2);
        border-radius: 12px;
        padding: 1.5rem;
        transition: all 0.3s ease;
      }

      .speaker-card:hover {
        border-color: rgba(110, 39, 225, 0.4);
        background: rgba(110, 39, 225, 0.08);
      }

      .speaker-photo {
        width: 100px;
        height: 100px;
        border-radius: 50%;
        background: linear-gradient(135deg, var(--accent-violet) 0%, var(--accent-grad-start) 100%);
        flex-shrink: 0;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 2.5rem;
      }

      .speaker-content {
        flex: 1;
      }

      .speaker-name {
        font-family: var(--font-body);
        font-size: 1.4rem;
        font-weight: 600;
        color: var(--text-light);
        margin-bottom: 0.25rem;
      }

      .speaker-affiliation {
        font-size: 1rem;
        color: var(--accent-cyan);
        margin-bottom: 0.75rem;
        font-weight: 400;
      }

      .speaker-talk {
        display: flex;
        flex-wrap: wrap;
        gap: 0.5rem 1rem;
        margin-bottom: 1rem;
      }

      .talk-label {
        background: rgba(110, 39, 225, 0.2);
        color: var(--accent-pink);
        padding: 0.25rem 0.75rem;
        border-radius: 4px;
        font-size: 0.85rem;
        font-weight: 600;
      }

      .talk-date {
        font-family: var(--font-mono);
        color: var(--text-dim);
        font-size: 0.85rem;
        font-weight: 500;
        display: flex;
        align-items: center;
      }

      .speaker-bio {
        font-size: 0.95rem;
        color: var(--text-mid);
        line-height: 1.7;
        margin-bottom: 1rem;
        font-weight: 300;
      }

      .speaker-bio.tba {
        color: var(--text-dim);
        font-style: italic;
      }

      .speaker-links {
        display: flex;
        gap: 1rem;
        flex-wrap: wrap;
      }

      .speaker-link {
        color: var(--accent-violet);
        text-decoration: none;
        font-size: 0.9rem;
        font-weight: 500;
        padding: 0.4rem 0.8rem;
        border: 1px solid rgba(110, 39, 225, 0.3);
        border-radius: 4px;
        transition: all 0.3s ease;
      }

      .speaker-link:hover {
        background: rgba(110, 39, 225, 0.15);
        border-color: var(--accent-violet);
        color: var(--accent-pink);
      }

      .footer-note {
        text-align: center;
        color: var(--text-dim);
        font-size: 0.85rem;
        margin-top: 3rem;
        font-weight: 300;
      }

      /* Mobile */
      @media (max-width: 600px) {
        body {
          padding: 1rem;
          padding-top: 2rem;
        }

        .header-row {
          flex-direction: column;
          gap: 0.5rem;
        }

        .nav-link {
          font-size: 0.95rem;
          min-width: auto;
        }

        .nav-left, .nav-right {
          text-align: center;
        }

        .speaker-card {
          flex-direction: column;
          align-items: center;
          text-align: center;
        }

        .speaker-photo {
          width: 80px;
          height: 80px;
          font-size: 2rem;
        }

        .speaker-talk {
          justify-content: center;
        }

        .speaker-links {
          justify-content: center;
        }
      }
    </style>
