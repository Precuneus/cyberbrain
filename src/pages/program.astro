    <style>
      :root {
        --bg-dark: #18181a;
        --bg-mid: #1a1a1f;
        --bg-deep: #1c1c24;
        --text-light: #efdee8;
        --text-mid: #dddddd;
        --text-dim: #919598;
        --accent-violet: #6e27e1;
        --accent-pink: #f287c8;
        --accent-cyan: #40d0d5;
        --accent-grad-start: #0900d6;
        --accent-grad-end: #ff8cd1;
        --font-title: 'Orbitron', sans-serif;
        --font-body: 'Poppins', sans-serif;
        --font-mono: 'Roboto Mono', monospace;
      }

      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      html, body {
        height: 100%;
      }

      body {
        background: linear-gradient(180deg, 
          var(--bg-dark) 0%, 
          var(--bg-mid) 30%,
          var(--bg-deep) 60%,
          var(--bg-dark) 100%
        );
        background-attachment: fixed;
        color: var(--text-light);
        font-family: var(--font-body);
        min-height: 100vh;
        padding: 2rem;
        padding-top: 4rem;
      }

      .container {
        max-width: 850px;
        margin: 0 auto;
      }

      header {
        text-align: center;
        margin-bottom: 3rem;
      }

      .header-row {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 0.5rem;
      }

      .nav-link {
        color: var(--text-dim);
        text-decoration: none;
        font-size: 1.1rem;
        font-weight: 400;
        letter-spacing: 0.05em;
        transition: color 0.3s ease;
        padding: 0.5rem 0;
        min-width: 150px;
      }

      .nav-left {
        text-align: left;
      }

      .nav-right {
        text-align: right;
      }

      .nav-link:hover {
        color: var(--accent-pink);
      }

      h1 {
        font-family: var(--font-title);
        font-size: clamp(2rem, 6vw, 3.5rem);
        font-weight: 400;
        letter-spacing: 0;
        line-height: 1.5;
        text-transform: uppercase;
        background: linear-gradient(135deg, var(--text-light) 0%, var(--accent-pink) 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        margin: 0;
      }

      .subtitle {
        font-family: var(--font-mono);
        color: var(--text-dim);
        letter-spacing: 0.1em;
        margin-top: 0.5rem;
        font-weight: 500;
      }

      .program-list {
        display: flex;
        flex-direction: column;
        gap: 1rem;
      }

      .event-card {
        background: rgba(110, 39, 225, 0.05);
        border: 1px solid rgba(110, 39, 225, 0.2);
        border-radius: 8px;
        overflow: hidden;
        transition: all 0.3s ease;
      }

      .event-header {
        padding: 1.25rem 1.5rem;
        cursor: pointer;
        display: flex;
        justify-content: space-between;
        align-items: center;
        transition: background 0.3s ease;
      }

      .event-card.open .event-header {
        background: rgba(110, 39, 225, 0.1);
      }

      .event-info {
        display: flex;
        align-items: center;
        gap: 1.5rem;
        flex-wrap: wrap;
      }

      .day-badge {
        background: linear-gradient(135deg, var(--accent-violet) 0%, var(--accent-grad-start) 100%);
        padding: 0.5rem 1rem;
        border-radius: 4px;
        min-width: 70px;
        text-align: center;
      }

      .day-name {
        display: block;
        font-size: 0.7rem;
        opacity: 0.8;
        font-weight: 300;
      }

      .day-date {
        display: block;
        font-size: 1.1rem;
        font-weight: 600;
      }

      .event-time {
        font-family: var(--font-mono);
        color: var(--accent-cyan);
        font-size: 1.1rem;
        font-weight: 500;
        min-width: 55px;
      }

      .event-title-wrap {
        flex: 1;
        min-width: 200px;
      }

      .event-title {
        font-size: 1.1rem;
        font-weight: 600;
        color: var(--text-light);
        margin-bottom: 0.25rem;
      }

      .event-speaker {
        font-size: 0.9rem;
        color: var(--text-dim);
        font-weight: 400;
      }

      .arrow {
        color: var(--accent-violet);
        font-size: 1rem;
        transition: transform 0.3s ease;
        margin-left: 1rem;
      }

      .event-card.open .arrow {
        transform: rotate(180deg);
      }

      .event-content {
        max-height: 0;
        overflow: hidden;
        transition: max-height 0.4s ease;
      }

      .event-card.open .event-content {
        max-height: 600px;
      }

      .content-inner {
        padding: 0 1.5rem 1.5rem 1.5rem;
        border-top: 1px solid rgba(110, 39, 225, 0.15);
      }

      .event-description {
        color: var(--text-mid);
        line-height: 1.7;
        margin-top: 1.25rem;
        margin-bottom: 1.5rem;
        font-weight: 300;
      }

      .speaker-card {
        display: flex;
        gap: 1.25rem;
        background: rgba(24, 24, 26, 0.7);
        padding: 1.25rem;
        border-radius: 8px;
        border: 1px solid rgba(110, 39, 225, 0.1);
      }

      .speaker-photo {
        width: 70px;
        height: 70px;
        border-radius: 50%;
        background: linear-gradient(135deg, var(--accent-violet) 0%, var(--accent-grad-start) 100%);
        flex-shrink: 0;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.8rem;
      }

      .speaker-info {
        flex: 1;
      }

      .speaker-name {
        font-weight: 600;
        color: var(--text-light);
        margin-bottom: 0.25rem;
      }

      .speaker-affiliation {
        font-size: 0.85rem;
        color: var(--accent-cyan);
        margin-bottom: 0.75rem;
        font-weight: 400;
      }

      .speaker-bio {
        font-size: 0.9rem;
        color: var(--text-dim);
        line-height: 1.6;
        margin: 0;
        font-weight: 300;
      }

      .footer-note {
        text-align: center;
        color: var(--text-dim);
        font-size: 0.85rem;
        margin-top: 3rem;
        font-weight: 300;
      }

      /* Mobile */
      @media (max-width: 600px) {
        body {
          padding: 1rem;
        }

        .header-row {
          flex-direction: column;
          gap: 0.5rem;
        }

        .nav-link {
          font-size: 0.95rem;
          min-width: auto;
        }

        .nav-left, .nav-right {
          text-align: center;
        }

        .event-info {
          gap: 1rem;
        }

        .day-badge {
          min-width: 60px;
          padding: 0.4rem 0.8rem;
        }

        .event-time {
          min-width: 45px;
          font-size: 1rem;
        }

        .event-title-wrap {
          width: 100%;
          margin-top: 0.5rem;
        }

        .speaker-card {
          flex-direction: column;
          align-items: center;
          text-align: center;
        }

        .speaker-photo {
          width: 60px;
          height: 60px;
        }
      }
    </style>

    <script>
      document.querySelectorAll('.event-card').forEach(card => {
        const header = card.querySelector('.event-header');
        
        header.addEventListener('click', () => {
          // Close all others
          document.querySelectorAll('.event-card').forEach(c => {
            if (c !== card) c.classList.remove('open');
          });
          
          // Toggle this one
          card.classList.toggle('open');
        });
      });
      
      // Open first card by default
      document.querySelector('.event-card').classList.add('open');
    </script>
  </body>
</html>
