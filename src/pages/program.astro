        grid-column: 1;
        font-family: var(--font-mono);
        font-size: 0.65rem;
        color: var(--text-dim);
        text-align: right;
        padding-right: 0.5rem;
        line-height: 0;
        transform: translateY(-1px);
      }

      .tt-gridline {
        border-top: 1px solid rgba(255, 255, 255, 0.04);
        pointer-events: none;
      }

      /* Event blocks */
      .tt-event {
        border-radius: 4px;
        padding: 0.3rem 0.45rem;
        margin: 1px 2px;
        font-size: 0.7rem;
        font-weight: 500;
        color: white;
        line-height: 1.3;
        overflow: hidden;
        display: flex;
        flex-direction: column;
        justify-content: flex-start;
      }

      .tt-evt-time {
        font-family: var(--font-mono);
        font-size: 0.55rem;
        opacity: 0.7;
        display: block;
      }

      .tt-event.tt-wyklad {
        background: rgba(110, 39, 225, 0.5);
        border-left: 2px solid var(--accent-violet);
      }

      .tt-event.tt-stoiska {
        background: rgba(64, 208, 213, 0.15);
        border-left: 2px solid var(--accent-cyan);
        color: var(--accent-cyan);
      }

      .tt-event.tt-online {
        background: rgba(220, 50, 70, 0.35);
        border-left: 2px solid #dc3246;
        color: #ff8a98;
      }

      .tt-event.tt-integracja {
        background: rgba(242, 135, 200, 0.15);
        border-left: 2px solid var(--accent-pink);
        color: var(--accent-pink);
        font-size: 0.65rem;
      }

      .tt-event.tt-tba {
        background: transparent;
        border: 1px dashed rgba(110, 39, 225, 0.25);
        color: var(--text-dim);
        font-style: italic;
        font-weight: 300;
      }

      /* Legend */
      .tt-legend {
        display: flex;
        justify-content: center;
        gap: 1.2rem;
        margin-top: 0.6rem;
        flex-wrap: wrap;
      }

      .tt-leg-item {
        font-size: 0.75rem;
        color: var(--text-dim);
        display: flex;
        align-items: center;
        gap: 0.3rem;
      }

      .tt-leg-dot {
        width: 8px;
        height: 8px;
        border-radius: 2px;
        display: inline-block;
      }

      .tt-leg-dot.tt-wyklad { background: rgba(110, 39, 225, 0.55); }
      .tt-leg-dot.tt-stoiska { background: rgba(64, 208, 213, 0.25); }
      .tt-leg-dot.tt-online { background: rgba(220, 50, 70, 0.4); }

      /* ‚îÄ‚îÄ TIMELINE ‚îÄ‚îÄ */
      .timeline {
        position: relative;
        max-width: 800px;
        margin: 0 auto;
        padding-left: 50px;
      }

      .timeline::before {
        content: '';
        position: absolute;
        left: 18px;
        top: 24px;
        bottom: 24px;
        width: 2px;
        background: linear-gradient(
          180deg,
          var(--accent-violet) 0%,
          #5a3be8 25%,
          var(--accent-cyan) 50%,
          #7bc4d0 75%,
          var(--accent-pink) 100%
        );
        opacity: 0.35;
      }

      .day {
        position: relative;
        margin-bottom: 2rem;
      }

      .day:last-child { margin-bottom: 0; }

      /* ‚îÄ‚îÄ NODE ‚îÄ‚îÄ */
      .node {
        position: absolute;
        left: -50px;
        top: 1.1rem;
        width: 38px;
        height: 38px;
        display: flex;
        align-items: center;
        justify-content: center;
      }

      .node-dot {
        width: 14px;
        height: 14px;
        border-radius: 50%;
        background: var(--day-color);
        box-shadow:
          0 0 10px var(--day-color),
          0 0 25px color-mix(in srgb, var(--day-color) 35%, transparent);
      }

      .node-dot.tba-dot {
        background: transparent;
        border: 2px solid var(--day-color);
        box-shadow: none;
        width: 10px;
        height: 10px;
        opacity: 0.5;
      }

      /* ‚îÄ‚îÄ DAY CARD ‚îÄ‚îÄ */
      .day-card {
        background: rgba(110, 39, 225, 0.04);
        border: 1px solid rgba(110, 39, 225, 0.15);
        border-left: 3px solid var(--day-color);
        border-radius: 0 10px 10px 0;
        overflow: hidden;
        transition: border-color 0.3s ease;
      }

      .day-card:hover {
        border-color: rgba(110, 39, 225, 0.3);
        border-left-color: var(--day-color);
      }

      .tba-card {
        opacity: 0.55;
      }

      .tba-card:hover {
        opacity: 0.7;
      }

      .day-header {
        padding: 1rem 1.5rem;
        display: flex;
        align-items: baseline;
        gap: 1rem;
      }

      .day-name {
        font-family: var(--font-title);
        font-size: 0.85rem;
        font-weight: 400;
        color: var(--day-color);
        letter-spacing: 0.08em;
        text-transform: uppercase;
      }

      .day-date {
        font-family: var(--font-mono);
        font-size: 0.85rem;
        color: var(--text-mid);
        font-weight: 400;
      }

      /* ‚îÄ‚îÄ LOCATIONS ‚îÄ‚îÄ */
      .talk-location {
        font-size: 0.8rem;
        color: var(--text-mid);
        font-weight: 300;
        display: flex;
        align-items: center;
        gap: 0.4rem;
        margin-bottom: 0.4rem;
      }

      .loc-label {
        font-family: var(--font-mono);
        font-size: 0.7rem;
        font-weight: 500;
        color: var(--day-color, var(--accent-violet));
        letter-spacing: 0.05em;
      }

      /* ‚îÄ‚îÄ TALKS ‚îÄ‚îÄ */
      .talks {
        padding: 0 1.5rem 1.25rem;
        display: flex;
        flex-direction: column;
        gap: 0.75rem;
      }

      .talk {
        background: rgba(255, 255, 255, 0.02);
        border: 1px solid rgba(110, 39, 225, 0.1);
        border-radius: 8px;
        overflow: hidden;
        transition: border-color 0.3s ease;
      }

      .talk:hover:not(.tba) {
        border-color: rgba(110, 39, 225, 0.25);
      }

      .talk.tba {
        border: 1px dashed rgba(110, 39, 225, 0.12);
        background: transparent;
      }

      .talk-header {
        padding: 1rem 1.25rem;
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        gap: 1rem;
      }

      [data-expandable] .talk-header {
        cursor: pointer;
      }

      .talk-info { flex: 1; }

      .talk-title {
        font-size: 1.05rem;
        font-weight: 600;
        color: var(--text-light);
        margin-bottom: 0.15rem;
        line-height: 1.4;
      }

      .talk-title.tba-text {
        color: var(--text-dim);
        font-weight: 300;
        font-style: italic;
        font-size: 0.9rem;
      }

      .talk-time {
        font-family: var(--font-mono);
        font-size: 0.8rem;
        color: var(--accent-cyan);
        font-weight: 400;
        margin-bottom: 0.3rem;
      }

      .talk-speaker {
        font-size: 0.9rem;
        color: var(--accent-cyan);
        text-decoration: none;
        font-weight: 400;
        transition: color 0.2s ease;
      }

      .talk-speaker:hover {
        color: var(--accent-pink);
        text-decoration: underline;
      }

      .talk-arrow {
        color: var(--text-dim);
        font-family: var(--font-mono);
        font-size: 0.7rem;
        font-weight: 400;
        letter-spacing: 0.04em;
        transition: color 0.3s ease;
        padding: 0.3rem 0.6rem;
        border: 1px solid rgba(110, 39, 225, 0.2);
        border-radius: 4px;
        white-space: nowrap;
        flex-shrink: 0;
        align-self: center;
      }

      .talk-arrow .arrow-icon {
        font-size: 0.55rem;
        display: inline-block;
        transition: transform 0.3s ease;
        margin-left: 0.2rem;
      }

      .talk:hover:not(.tba) .talk-arrow {
        color: var(--text-mid);
        border-color: rgba(110, 39, 225, 0.35);
      }

      .talk.open .talk-arrow {
        color: var(--text-light);
        border-color: rgba(110, 39, 225, 0.4);
      }

      .talk.open .talk-arrow .arrow-icon {
        transform: rotate(180deg);
      }

      .talk-body {
        max-height: 0;
        overflow: hidden;
        transition: max-height 0.4s ease;
      }

      .talk.open .talk-body {
        max-height: 800px;
      }

      .talk-body p {
        padding: 0 1.25rem;
        color: var(--text-mid);
        font-size: 0.9rem;
        font-weight: 300;
        line-height: 1.8;
        margin-bottom: 1rem;
      }

      .talk-body p:first-child {
        padding-top: 0.5rem;
        border-top: 1px solid rgba(110, 39, 225, 0.1);
      }

      .talk-body p:last-child {
        padding-bottom: 0.5rem;
      }

      /* ‚îÄ‚îÄ MOBILE ‚îÄ‚îÄ */
      @media (max-width: 600px) {
        body { padding: 1rem; padding-top: 2rem; }

        .header-row {
          display: flex;
          flex-direction: row;
          align-items: center;
          justify-content: space-between;
          gap: 0.5rem;
        }

        .nav-home {
          position: static;
          min-width: auto;
          flex-shrink: 0;
        }

        .nav-brain { width: 36px; height: 36px; margin-left: 0; margin-top: 0; }

        h1 {
          font-size: 1rem;
          flex: 1;
          text-align: center;
        }

        .nav-btn {
          position: static;
          min-width: auto;
          flex-shrink: 0;
          padding: 0.35rem 0.7rem;
          font-size: 0.6rem;
        }

        .timetable {
          grid-template-columns: 0 repeat(5, 1fr);
          grid-template-rows: auto repeat(35, 18px);
        }

        .tt-corner { display: none; }
        .tt-time { display: none; }
        .tt-day-head { font-size: 0.65rem; padding: 0.4rem 0 0.3rem; }
        .tt-date { font-size: 0.55rem; }
        .tt-event { font-size: 0.55rem; padding: 0.15rem 0.25rem; justify-content: flex-start; }
        .tt-evt-time { font-size: 0.45rem; }
        .tt-legend { gap: 0.6rem; }
        .tt-leg-item { font-size: 0.55rem; }

        .timeline { padding-left: 30px; }

        .timeline::before { left: 8px; }

        .node {
          left: -30px;
          width: 20px;
          height: 20px;
        }

        .node-dot { width: 10px; height: 10px; }
        .node-dot.tba-dot { width: 8px; height: 8px; }

        .day-header { padding: 0.75rem 1rem; }
        .day-name { font-size: 0.75rem; }
        .talks { padding: 0 0.75rem 1rem; }
        .talk-header { padding: 0.75rem 1rem; }
        .talk-body p { padding: 0 1rem; font-size: 0.85rem; }
        .talk-title { font-size: 0.95rem; }
      }
    </style>

    <script>
      document.querySelectorAll('[data-expandable]').forEach(talk => {
        talk.querySelector('.talk-header').addEventListener('click', (e) => {
          // Don't toggle if clicking the speaker link
          if (e.target.closest('.talk-speaker')) return;
          const wasOpen = talk.classList.contains('open');
          talk.closest('.talks').querySelectorAll('.talk').forEach(t => t.classList.remove('open'));
          if (!wasOpen) talk.classList.add('open');
        });
      });
    </script>
  </body>
</html>