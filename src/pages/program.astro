    <style>
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      html, body {
        height: 100%;
      }

      body {
        background: linear-gradient(180deg, 
          #0a0a0f 0%, 
          #0d0d1a 30%,
          #111128 60%,
          #0a0a0f 100%
        );
        background-attachment: fixed;
        color: #e2e8f0;
        font-family: 'Segoe UI', system-ui, sans-serif;
        min-height: 100vh;
        padding: 2rem;
      }

      .container {
        max-width: 850px;
        margin: 0 auto;
      }

      header {
        text-align: center;
        margin-bottom: 3rem;
      }

      .title-row {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 1rem;
      }

      .logo-link {
        display: block;
        width: 60px;
        height: 60px;
        transition: transform 0.3s ease, opacity 0.3s ease;
      }

      .logo-link:hover {
        transform: scale(1.1);
        opacity: 0.8;
      }

      .header-logo {
        width: 100%;
        height: 100%;
        object-fit: contain;
        filter: brightness(0.9) hue-rotate(240deg) saturate(0.5);
      }

      h1 {
        font-size: clamp(2rem, 6vw, 3.5rem);
        font-weight: 300;
        letter-spacing: 0.15em;
        text-transform: uppercase;
        background: linear-gradient(135deg, #e2e8f0 0%, #a78bfa 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        margin: 0;
      }

      .subtitle {
        color: #64748b;
        letter-spacing: 0.1em;
        margin-top: 1rem;
      }

      .program-list {
        display: flex;
        flex-direction: column;
        gap: 1rem;
      }

      .event-card {
        background: rgba(139, 92, 246, 0.05);
        border: 1px solid rgba(139, 92, 246, 0.2);
        border-radius: 8px;
        overflow: hidden;
        transition: all 0.3s ease;
      }

      .event-header {
        padding: 1.25rem 1.5rem;
        cursor: pointer;
        display: flex;
        justify-content: space-between;
        align-items: center;
        transition: background 0.3s ease;
      }

      .event-card.open .event-header {
        background: rgba(139, 92, 246, 0.1);
      }

      .event-info {
        display: flex;
        align-items: center;
        gap: 1.5rem;
        flex-wrap: wrap;
      }

      .day-badge {
        background: linear-gradient(135deg, #8b5cf6 0%, #7c3aed 100%);
        padding: 0.5rem 1rem;
        border-radius: 4px;
        min-width: 70px;
        text-align: center;
      }

      .day-name {
        display: block;
        font-size: 0.7rem;
        opacity: 0.8;
      }

      .day-date {
        display: block;
        font-size: 1.1rem;
        font-weight: 600;
      }

      .event-time {
        color: #a78bfa;
        font-size: 1.1rem;
        font-family: monospace;
        min-width: 55px;
      }

      .event-title-wrap {
        flex: 1;
        min-width: 200px;
      }

      .event-title {
        font-size: 1.1rem;
        font-weight: 500;
        color: #e2e8f0;
        margin-bottom: 0.25rem;
      }

      .event-speaker {
        font-size: 0.9rem;
        color: #94a3b8;
      }

      .arrow {
        color: #8b5cf6;
        font-size: 1rem;
        transition: transform 0.3s ease;
        margin-left: 1rem;
      }

      .event-card.open .arrow {
        transform: rotate(180deg);
      }

      .event-content {
        max-height: 0;
        overflow: hidden;
        transition: max-height 0.4s ease;
      }

      .event-card.open .event-content {
        max-height: 600px;
      }

      .content-inner {
        padding: 0 1.5rem 1.5rem 1.5rem;
        border-top: 1px solid rgba(139, 92, 246, 0.15);
      }

      .event-description {
        color: #cbd5e1;
        line-height: 1.7;
        margin-top: 1.25rem;
        margin-bottom: 1.5rem;
      }

      .speaker-card {
        display: flex;
        gap: 1.25rem;
        background: rgba(15, 15, 25, 0.5);
        padding: 1.25rem;
        border-radius: 8px;
        border: 1px solid rgba(139, 92, 246, 0.1);
      }

      .speaker-photo {
        width: 70px;
        height: 70px;
        border-radius: 50%;
        background: linear-gradient(135deg, #8b5cf6 0%, #6d28d9 100%);
        flex-shrink: 0;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.8rem;
      }

      .speaker-info {
        flex: 1;
      }

      .speaker-name {
        font-weight: 600;
        color: #e2e8f0;
        margin-bottom: 0.25rem;
      }

      .speaker-affiliation {
        font-size: 0.85rem;
        color: #8b5cf6;
        margin-bottom: 0.75rem;
      }

      .speaker-bio {
        font-size: 0.9rem;
        color: #94a3b8;
        line-height: 1.6;
        margin: 0;
      }

      .footer-note {
        text-align: center;
        color: #475569;
        font-size: 0.85rem;
        margin-top: 3rem;
      }

      /* Mobile */
      @media (max-width: 600px) {
        body {
          padding: 1rem;
        }

        .logo-link {
          width: 45px;
          height: 45px;
        }

        .event-info {
          gap: 1rem;
        }

        .day-badge {
          min-width: 60px;
          padding: 0.4rem 0.8rem;
        }

        .event-time {
          min-width: 45px;
          font-size: 1rem;
        }

        .event-title-wrap {
          width: 100%;
          margin-top: 0.5rem;
        }

        .speaker-card {
          flex-direction: column;
          align-items: center;
          text-align: center;
        }

        .speaker-photo {
          width: 60px;
          height: 60px;
        }
      }
    </style>

    <script>
      document.querySelectorAll('.event-card').forEach(card => {
        const header = card.querySelector('.event-header');
        
        header.addEventListener('click', () => {
          // Close all others
          document.querySelectorAll('.event-card').forEach(c => {
            if (c !== card) c.classList.remove('open');
          });
          
          // Toggle this one
          card.classList.toggle('open');
        });
      });
      
      // Open first card by default
      document.querySelector('.event-card').classList.add('open');
    </script>
  </body>
</html>