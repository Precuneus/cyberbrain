    <style>
      body {
        padding: 2rem;
        padding-top: 4rem;
      }

      .program-list {
        display: flex;
        flex-direction: column;
        gap: 1rem;
      }

      .event-card {
        background: rgba(110, 39, 225, 0.05);
        border: 1px solid rgba(110, 39, 225, 0.2);
        border-radius: 8px;
        overflow: hidden;
        transition: all 0.3s ease;
      }

      .event-header {
        padding: 1.25rem 1.5rem;
        cursor: pointer;
        display: flex;
        justify-content: space-between;
        align-items: center;
        transition: background 0.3s ease;
      }

      .event-card.open .event-header {
        background: rgba(110, 39, 225, 0.1);
      }

      .event-info {
        display: flex;
        align-items: center;
        gap: 1.5rem;
        flex-wrap: wrap;
      }

      .day-badge {
        background: linear-gradient(135deg, var(--accent-violet) 0%, var(--accent-grad-start) 100%);
        padding: 0.5rem 1rem;
        border-radius: 4px;
        min-width: 70px;
        text-align: center;
      }

      .day-name {
        display: block;
        font-size: 0.7rem;
        opacity: 0.8;
        font-weight: 300;
      }

      .day-date {
        display: block;
        font-size: 1.1rem;
        font-weight: 600;
      }

      .event-time {
        font-family: var(--font-mono);
        color: var(--accent-cyan);
        font-size: 1.1rem;
        font-weight: 500;
        min-width: 55px;
      }

      .event-title-wrap {
        flex: 1;
        min-width: 200px;
      }

      .event-title {
        font-size: 1.1rem;
        font-weight: 600;
        color: var(--text-light);
        margin-bottom: 0.25rem;
      }

      .event-speaker {
        font-size: 0.9rem;
        color: var(--text-dim);
        font-weight: 400;
      }

      .arrow {
        color: var(--accent-violet);
        font-size: 1rem;
        transition: transform 0.3s ease;
        margin-left: 1rem;
      }

      .event-card.open .arrow {
        transform: rotate(180deg);
      }

      .event-content {
        max-height: 0;
        overflow: hidden;
        transition: max-height 0.4s ease;
      }

      .event-card.open .event-content {
        max-height: 600px;
      }

      .content-inner {
        padding: 0 1.5rem 1.5rem 1.5rem;
        border-top: 1px solid rgba(110, 39, 225, 0.15);
      }

      .event-description {
        color: var(--text-mid);
        line-height: 1.7;
        margin-top: 1.25rem;
        font-weight: 300;
      }

      @media (max-width: 600px) {
        body { padding: 1rem; }

        .event-info { gap: 1rem; }

        .day-badge {
          min-width: 60px;
          padding: 0.4rem 0.8rem;
        }

        .event-time {
          min-width: 45px;
          font-size: 1rem;
        }

        .event-title-wrap {
          width: 100%;
          margin-top: 0.5rem;
        }
      }
    </style>

    <script>
      document.querySelectorAll('.event-card').forEach(card => {
        card.querySelector('.event-header').addEventListener('click', () => {
          document.querySelectorAll('.event-card').forEach(c => {
            if (c !== card) c.classList.remove('open');
          });
          card.classList.toggle('open');
        });
      });
      document.querySelector('.event-card').classList.add('open');
    </script>
  </body>
</html>
